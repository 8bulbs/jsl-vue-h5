tac()
  text-align center

stroke-line($width, $y)
  width $width
  border 0.5px solid #8A91A4
  transform translateY($y)

fl($margin-left)
  float left
  margin-left $margin-left

text-line($height, $font-size)
  height $height
  line-height $height
  font-size $font-size

with-bg($width, $height, $url)
  width $width
  height $height
  background url($url)
  background-size $width $height

has-bg($width, $height)
  width $width
  height $height
  background-size $width $height

with-bg-fs($url)
  width 375px
  height 667px
  background url($url)
  background-size 375px 667px

ab-lt($left, $top)
  position absolute
  top $top
  left $left

ab-rt($right, $top)
  position absolute
  top $top
  right $right

absolute-left($left)
  position absolute
  left $left
  top 50%
  transform translateY(-50%)

absolute-center()
  position absolute
  top 50%
  left 50%
  transform translate(-50%, -50%)

bg-image($url)
  background-image: url($url + "@2x.png")
  @media (-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ratio: 3)
    background-image: url($url + "@3x.png")

no-wrap()
  text-overflow: ellipsis
  overflow: hidden
  white-space: nowrap

extend-click()
  &:before
    content: ''
    position: absolute
    top: -10px
    left: -10px
    right: -10px
    bottom: -10px

